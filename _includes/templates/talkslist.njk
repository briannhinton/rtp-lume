<ul class="talkList">
  {% for talk in talksList %}
  <li class="talkList-talk">
    <a href="{{ talk.data.url }}" class="talkList-title"{% if entry.data.url == url %} aria-current="page"{% endif %}>
      {% if talk.data.title %}
        <strong>{{ talk.data.title }}</strong>
      {% else %}
        <code>{{ talk.url }}</code>
      {% endif %}
    </a>

    <time class="talkList-date" datetime="{{ talk.data.date | date('DATETIME') }}">
      {{ talk.data.date | date('HUMAN_DATE') }}
    </time>

    {% for tag in talk.data.tags %}
    {% set page = search.page("type=tag tag='" + tag + "'") %}
    {% if page %}
    <a href="{{ page.data.url  }}" class="tag">{{ tag }}</a>
    {% endif %}
    {% endfor %}
    <p>{% if talk.data.description %}
          {{ talk.data.description }}
       {% endif %} 
       </p>  
  </li>
{% endfor %}
</ul>
